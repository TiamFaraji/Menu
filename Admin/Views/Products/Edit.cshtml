@model Core.ProductService.ProductDto

@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";
}

<h1>Edit</h1>

<body>
    <div class="form">
        <form method="post" enctype="multipart/form-data" class="formobj">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="formobj">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>

                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" />
                <span asp-validation-for="Price" class="text-danger"></span>

                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control"></input>
                <span asp-validation-for="Description" class="text-danger"></span>

                <label asp-for="Combinations" class="control-label"></label>
                <input asp-for="Combinations" class="form-control"></input>
                <span asp-validation-for="Combinations" class="text-danger"></span>

                <label asp-for="Img" class="control-label">Product Image</label>
                <input asp-for="Img" type="file" class="form-control" />
                <span asp-validation-for="Img" class="text-danger"></span>

                <label asp-for="CategoryId" class="control-label">Category</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>

                <button type="submit">Submit</button>
            </div>
        </form>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
