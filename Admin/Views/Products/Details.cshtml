@model IEnumerable<DataAccess.Models.Product>

@{
    ViewData["Title"] = "Category Products";
    var categoryName = Model.FirstOrDefault()?.Category?.Title ?? "UnKnown Category";
    Layout = "_CategoryLayout";
}

<body>
    @if (!Model.Any())
    {
        <p>there is no product in this category</p>
    }
    else
    {
        <div class="menu-container">
            @foreach (var item in Model)
            {
                <div class="main">

                    @if (!string.IsNullOrEmpty(item.Img))
                    {
                        <img src="~/uploads/@item.Img" alt="@item.Title" />
                    }
                    <div class="des">
                        <span class="item-name">@item.Title</span>
                        <span class="item-price">@item.Price</span>
                        <p class="item-description">@item.Description</p>
                    </div>
                    <a asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id" class="deletebtn">Delete</a>
                    <a asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id" class="credit">Edit</a>
                </div>
            }
        </div>
    }

</body>